{
  # PII & Secrets
  # Retrieve these from your Password Manager (e.g., Bitwarden, 1Password)
  username = "your-username";
  linuxUser = "your-linux-user";
  email = "user@example.com";
  # Git Configuration
  gitName = "Your Name"; # The name that appears on your commits (e.g., "Alyssa Feola")
  githubUsername = "your-github-handle"; # Your GitHub username (e.g., "alisabryant")

  # Hostnames
  # Run `scutil --get LocalHostName` in a terminal on each machine to find this value.
  # It must match exactly for the configuration to apply.
  laptopHostname = "laptop-hostname";
  studioHostname = "studio-hostname";
}
